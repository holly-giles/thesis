keywords = {b-lymphocytes,chemokine cxcl13,chronic b-cell leukemias,chronic lymphocytic leukemia},
month = {nov},
number = {9},
pages = {3316--3325},
publisher = {American Society of Hematology},
title = {{Overexpression of the CXCR5 chemokine receptor, and its ligand, CXCL13 in B-cell chronic lymphocytic leukemia}},
url = {https://ashpublications.org/blood/article/110/9/3316/23965/Overexpression-of-the-CXCR5-chemokine-receptor-and},
