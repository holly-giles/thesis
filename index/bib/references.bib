publisher = {Sci Rep},
title = {{Systems biology drug screening identifies statins as enhancers of current therapies in chronic lymphocytic leukemia.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/33335123 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC7746765},
volume = {10},
