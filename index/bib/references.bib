journal = {Haematologica},
month = {sep},
number = {9},
pages = {1594--1604},
title = {{Extracellular vesicles of bone marrow stromal cells rescue chronic lymphocytic leukemia B cells from apoptosis, enhance their migration and induce gene expression modifications}},
