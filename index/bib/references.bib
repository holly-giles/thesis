issn = {1932-6203},
journal = {PLOS ONE},
number = {12},
pages = {e15992},
publisher = {Public Library of Science},
title = {{Stereotypical Chronic Lymphocytic Leukemia B-Cell Receptors Recognize Survival Promoting Antigens on Stromal Cells}},
