title = {{Inflammatory cytokines and signaling pathways are associated with survival of primary chronic lymphocytic leukemia cells in vitro: a dominant role of CCL2}},
url = {http://www.haematologica.org/cgi/doi/10.3324/haematol.2010.031377},
volume = {96},
