publisher = {BioMed Central},
title = {{Chronic Lymphocytic Leukemia Cells in a Lymph Node Microenvironment Depict Molecular Signature Associated with an Aggressive Disease}},
url = {https://molmed.biomedcentral.com/articles/10.2119/molmed.2012.00303},
