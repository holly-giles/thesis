month = {sep},
number = {5},
pages = {589--599},
pmid = {22712573},
publisher = {Br J Haematol},
title = {{Mimicking the tumour microenvironment: Three different co-culture systems induce a similar phenotype but distinct proliferative signals in primary chronic lymphocytic leukaemia cells}},
